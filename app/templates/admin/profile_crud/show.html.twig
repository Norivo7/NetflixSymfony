{% extends 'admin/base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block navigation %}{% endblock %}

{% block content %}
    <h2>Profile</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ profile.name }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ profile.avatar }}</td>
            </tr>
        </tbody>
    </table>

    <a class="profileButton" href="{{ path('profile_crud_index') }}">Wróć</a>

    <a class="profileButton" href="{{ path('profile_crud_edit', {'id': profile.id}) }}">Edytuj</a>

    {{ include('admin/profile_crud/_delete_form.html.twig') }}
{% endblock %}
