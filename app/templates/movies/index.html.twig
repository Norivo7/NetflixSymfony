        grid-template-columns:
                repeat(6, minmax(270px, 1fr));
        /*grid-template-rows: minmax(150px, 1fr);*/
    }
    box a {
        transition: transform 0.3s;
    }

    .box a:hover {
        transition: transform 0.3s;
        -ms-transform: scale(1.3);
        -webkit-transform: scale(1.3);
        transform: scale(1.3);
    }

    .box img {
        border-radius: 2px;
        max-width:270px;
        width: auto;
        height: auto;
    }
    #search {
        margin-top: 12px;
    }
    #main-container{
        overflow-x: scroll;
        margin-left: 30px;
    }

